<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="treichel.screensharingmobile.ContactActivity">

    <TextView
        android:id="@+id/contactUsernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="116dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="47dp"
        android:text="TextView"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/contactStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/avatarImageView"
        android:layout_alignLeft="@+id/contactUsernameTextView"
        android:layout_alignStart="@+id/contactUsernameTextView"
        android:text="TextView" />

    <ImageView
        android:id="@+id/avatarImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/contactUsernameTextView"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/contactStatusTextView"
        android:layout_toStartOf="@+id/contactStatusTextView"
        app:srcCompat="@android:color/holo_red_light" />

    <Button
        android:id="@+id/callButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/avatarImageView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/avatarImageView"
        android:layout_marginBottom="108dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:text="Call" />

    <Button
        android:id="@+id/messageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/callButton"
        android:layout_alignLeft="@+id/callButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/callButton"
        android:layout_alignStart="@+id/callButton"
        android:layout_marginBottom="29dp"
        android:text="Message" />

</RelativeLayout>
